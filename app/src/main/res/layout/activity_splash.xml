<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#505BBC"
    >

    <TextView
        android:id="@+id/head_textView_splashActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_main_text"
        android:gravity="center"
        style="@style/Text.SplashHeadStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_sub_text"
        style="@style/Text.SplashSubStyle"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="@id/head_textView_splashActivity"
        app:layout_constraintBottom_toTopOf="@id/head_textView_splashActivity"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/splash_loading"
        android:layout_marginTop="20dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toBottomOf="@id/head_textView_splashActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>